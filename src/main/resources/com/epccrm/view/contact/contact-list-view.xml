<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://contactListView.title"
      focusComponent="contactsDataGrid">
    <data>
        <collection id="contactsDc"
                    class="com.epccrm.entity.Contact">
            <fetchPlan extends="_base"/>
            <loader id="contactsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Contact e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="contactsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="contactsDataGrid.create"/>
            <button id="editBtn" action="contactsDataGrid.edit"/>
            <button id="removeBtn" action="contactsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="contactsDl"/>
        </hbox>
        <dataGrid id="contactsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="contactsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="title"/>
                <column property="firstName"/>
                <column property="lastName"/>
                <column property="isDefaultTrue"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
